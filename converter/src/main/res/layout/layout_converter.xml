<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    tools:context=".presentation.views.ConverterView">

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:paddingStart="0dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="0dp"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/menu" />

    <TextView
        android:id="@+id/currency_converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Currency Calculator."
        android:textColor="@color/blue"
        android:textSize="48sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu" />

    <RelativeLayout
        android:id="@+id/convert_from"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currency_converter">

        <EditText
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/tv_base_currency"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_base_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:textSize="24sp"
            tools:text="NGN" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/convert_to"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convert_from">

        <TextView
            android:id="@+id/converted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/tv_target_currency"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:text="00000" />

        <TextView
            android:id="@+id/tv_target_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:textSize="24sp"
            tools:text="NGN" />
    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_spinner_base_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convert_to"
        app:strokeColor="@color/gray_dark"
        app:strokeWidth="1dp">

        <Spinner
            android:id="@+id/spinner_base_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_swap"
        app:layout_constraintBottom_toBottomOf="@id/cv_spinner_base_currency"
        app:layout_constraintEnd_toStartOf="@id/cv_spinner_target_currency"
        app:layout_constraintStart_toEndOf="@id/cv_spinner_base_currency"
        app:layout_constraintTop_toTopOf="@id/cv_spinner_base_currency" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_spinner_target_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cv_spinner_base_currency"
        app:strokeColor="@color/gray_dark"
        app:strokeWidth="1dp">

        <Spinner
            android:id="@+id/spinner_target_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_convert"
        style="@style/MaterialButtonStyle.DisableButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:enabled="false"
        android:text="@string/convert"
        app:layout_constraintTop_toBottomOf="@id/cv_spinner_base_currency" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_convert">

        <TextView
            android:id="@+id/market_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mid_market_exchange_rate_at_13_38_utc"
            android:textColor="@color/blue"
            android:textColorLink="@color/blue"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_info" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>